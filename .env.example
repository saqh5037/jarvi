# ===================================
# JARVI - Configuration Template
# ===================================
# Copy this file to .env and fill with your actual values
# NEVER commit .env file with real credentials

# === Telegram Configuration ===
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# Get your bot token from @BotFather on Telegram

# === AI Services Configuration ===
# Priority: Gemini (free) -> OpenAI (paid) -> Local Whisper

# Google Gemini API (FREE - Recommended)
# Get your key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI API (Paid service)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Claude API (Paid service)
# Get your key at: https://console.anthropic.com/
CLAUDE_API_KEY=your_claude_api_key_here

# === Notion Integration ===
NOTION_API_TOKEN=your_notion_api_token_here
NOTION_TOKEN=your_notion_token_here
NOTION_DATABASE_ID=your_main_database_id_here

# Auto-populated after setup
NOTION_VOICE_NOTES_DB_ID=
NOTION_REMINDERS_DB_ID=
NOTION_TODOS_DB_ID=
NOTION_MEETINGS_DB_ID=
NOTION_INTERESTS_DB_ID=

# === Email Configuration ===
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here
EMAIL_FROM_NAME=JARVI Assistant

# === Gmail Accounts ===
GMAIL_ACCOUNT_1=
GMAIL_ACCOUNT_2=
GMAIL_ACCOUNT_3=
GMAIL_ACCOUNT_4=

# === Application Configuration ===
NODE_ENV=development
PORT=3000
BASE_URL=http://localhost:5173
API_BASE_URL=http://localhost:3001

# === Docker Configuration ===
DOCKER_DATA_PATH=/app/data
DOCKER_VOICE_PATH=/app/voice-notes
DOCKER_MEETINGS_PATH=/app/meetings
DOCKER_TASKS_PATH=/app/tasks

# === System Paths ===
# Update these based on your system
EDGE_TTS_PATH=/usr/local/bin/edge-tts
WHISPER_PATH=/usr/local/bin/whisper
WORK_DIR=/app

# === Security ===
JWT_SECRET=your_jwt_secret_here_minimum_32_characters
SESSION_SECRET=your_session_secret_here_minimum_32_characters

# === Database ===
DATABASE_URL=sqlite:///app/data/jarvi.db
REDIS_URL=redis://redis:6379

# === Monitoring ===
LOG_LEVEL=info
ENABLE_METRICS=false
SENTRY_DSN=